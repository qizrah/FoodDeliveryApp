@page
@model FoodDelivery.Pages.Customer.Home.DetailsModel
@{
    ViewData["Title"] = "Details";
}

<div class="">
    <form method="post">
        <input asp-for="objMenuItem.Id" hidden />
        <input asp-for="objCart.Id" hidden />
        <div class="container backgroundWhite">
            <div class="card">
                <div class="card-header bg-light text-light ml-0 row container">
                    <div class="col-12 col-md-6">
                        <h1 class="text-primary">
                            @Model.objMenuItem.Name
                        </h1>
                    </div>
                    <div class="col-12 col-md-6 text-md-end">
                        <h1 class="text-primary">
                            @Model.objMenuItem.price.ToString("C")
                        </h1>
                    </div>
                </div>
                <div class="card-body">
                    <div class="container rounded p-2">
                        <div class="row">
                            <div class="col-12 col-lg-8">
                                <div class="row">
                                    <div class="col-12">
                                        <span class="badge bg-warning h3">@Model.objMenuItem.Category.Name</span>
                                        @* <span class="badge bg-dark">@Model.objMenuItem.FoodType.Name</span> *@
                                        <h3 class="text-success"></h3>
                                        <p class="text-secondary">@Html.Raw(Model.objMenuItem.Description)</p>
                                        <div class="row py-4">
                                            <div class="col-2">
                                                <label class="h3">Quantity</label>
                                            </div>
                                            <div class="col-2">
                                                <input asp-for="txtCount" type="number" min="1" value="1" class="form-control rounded" />
                                                <span class="text-danger"></span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-12 col-lg-4 p-1 text-center">
                                <img src="@Model.objMenuItem.Image" style="width:100%" class="rounded" alt="@Model.objMenuItem.Name" />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <div class="row">
                        <div class="col-12 col-md-6 pb-1">
                            <a asp-page="Index" class="btn btn-success btn-square form-control btn-lg" style="height:50px;">Back to List</a>
                        </div>
                        <div class="col-12 col-md-6">
                            @if (!string.IsNullOrEmpty(HttpContext.Session.GetString("UserLoggedIn")))
                            {
                                <div class="col-12 col-md-6 pb-1">
                                    <button type="submit" value="Add to Cart" class="btn btn-primary btn-square form-control btn-lg" style="height:50px;">Add to Cart</button>
                                </div>
                            }
                            else
                            {
                                <div class="col-12 col-md-6 pb-1">
                                    <a class="btn btn-danger btn-square form-control btn-lg" style="height:50px" asp-area="Identity" asp-page="/Account/Login">Login to Add to Cart</a>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
