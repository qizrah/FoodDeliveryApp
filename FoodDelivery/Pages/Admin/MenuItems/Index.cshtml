@page
@{
    ViewData["Title"] = "Menu Items";
}



<div class="border backgroundWhite container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Menu Items List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-page="Upsert" asp-route-id="0" class="btn btn-primary">
                <i class="fas fa-plus"></i>&nbsp;Create New
            </a>
        </div>
    </div>
    <br /><br />
    <table id="DT_load" class="table table-striped table-bordered" style="width:100%">
        <thead>
            <tr>
                <th>
                    Item Name
                </th>
                <th>Price</th>
                <th>Category</th>
                <th>Food Type</th>
                <th></th>
            </tr>
        </thead>

    </table>
</div>
@section Scripts {
    <script src="~/js/menuitem.js"></script>
}

