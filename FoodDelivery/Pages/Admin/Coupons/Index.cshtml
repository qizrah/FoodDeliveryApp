@page
@model FoodDelivery.Pages.Admin.Coupons.IndexModel
@{
}

<h2 class="text-primary">Coupons</h2>
<a asp-page="Upsert" class="btn btn-primary mb-2">Create New</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Code</th>
            <th>Discount</th>
            <th>Min Order</th>
            <th>Expiration</th>
            <th>Uses</th>
            <th>Max Uses</th>
            <th>Valid Day</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var coupon in Model.Coupons)
        {
            <tr>
                <td>@coupon.Code</td>
                <td>@coupon.DiscountAmount</td>
                <td>@coupon.MinimumOrderAmount</td>
                <td>@coupon.ExpirationDate?.ToShortDateString()</td>
                <td>@coupon.Uses</td>
                <td>@coupon.MaxUses</td>
                <td>@coupon.ValidDayOfWeek</td>
                <td>
                    <a asp-page="Upsert" asp-route-id="@coupon.Id" class="btn btn-sm btn-warning">Edit</a>
                    <form method="post" asp-page-handler="Delete" asp-route-id="@coupon.Id" class="d-inline">
                        <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Delete this coupon?')">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
