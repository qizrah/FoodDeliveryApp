@page
@model FoodDelivery.Pages.Admin.Categories.IndexModel

@{
    ViewData["Title"] = "Categories";
}

<div class="container whiteBackground">
    <div class="row">
        <div class="col-12 text-end ">
            <a asp-page="Upsert" asp-route-id="0" class="btn btn-primary">
                <i class="fas fa-plus"></i> &nbsp; Create New
            </a>
        </div>
    </div>
</div>
<table class="table table-striped table-bordered" id="DT_load" style="width:100%;">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Category[0].Name)
            </th>
            <th>
                Display Order
            </th>
            <th></th>
        </tr>
    </thead>
</table>

@section Scripts {
    <script src="~/js/category.js"></script>
}